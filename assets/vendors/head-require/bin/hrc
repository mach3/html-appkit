#!/usr/bin/env node

var fs = require("fs"),
	hrc = require("../lib/head-require"),
	args = process.argv.slice(2),
	result = null;

try {
	if(args.length){
		result = hrc.compile(args[0]);

		if(args[1]){
			fs.writeFileSync(args[1], result);
		} else {
			console.log(result);
		}
	}
} catch(e){
	console.error(e.mssage);
}